@model IEnumerable<Facebook.Models.Album>

@{
	ViewBag.Title = "Index";
}

@if (ViewBag.userId == ViewBag.currentUserId)
{
    <h2>Your albums</h2>
}
else
{
    <h2>@ViewBag.userName's albums</h2>
}


@if (ViewBag.userId == ViewBag.currentUserId)
{
    <p>
        @Html.ActionLink("Create New", "New", "Album", new { @id = ViewBag.userId }, null)
    </p>
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.ActionLink(item.name, "Index", "Photo", new { @id = item.albumID }, null)
        </td>

        @if (ViewBag.userId == ViewBag.currentUserId||ViewBag.administrator)
        {
        <td>
           
            @using (Html.BeginForm("Delete", "Album", new { @id = item.albumID }, FormMethod.Post, null))
            {
                @Html.HttpMethodOverride(HttpVerbs.Delete);
                <button class="btn btn-success" type="submit">Delete</button>
            }
        </td>
    
        }
    </tr>
    }

</table>
