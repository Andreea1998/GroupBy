<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="keywords" content="">
	<meta name="description" content="">
	<title>@ViewBag.Title - GroupBy</title>
	@Styles.Render("~/Content/css")
	@Styles.Render("~/Content/templatemo-blue.css")
	@Scripts.Render("~/bundles/modernizr")
	@Scripts.Render("~/bundles/bootstrap")

    <style>
        .logo{
            float: left;
        }

        .navbar-brand{
            color:white;
        }

        .navbar-brand:hover {
            color: white;
        }
    </style>

</head>
<body>
	<nav class="navbar navbar-fixed-top", style="background-color: #0059b3">
		<div class="container">
			<div class="navbar-header col-6 col-md-4">
				<a class="navbar-brand logo-header" href="#">
					<img src=@Url.Content("~/Content/Images/group.png") width="30" height="30" class="logo"  alt=""> 
                    GroupBy
                </a>
			</div>
			<div class="col-6 col-md-4">
					@using (Html.BeginForm("Search", "Search", FormMethod.Get,new {@class= "navbar-form" }))
					{
						<div class="input-group">
							@Html.TextBox("searchText",null, new { @class = "form-control", placeholder = "Searching for someone?" })
							<div class="input-group-btn">
								<button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
							</div>
						</div>
					}
			</div>
			<div class="col-6 col-md-4">
				@Html.Partial("_LoginPartial")
			</div>
		</div>
	</nav>
	<div class="container body-content">
		@RenderBody()
	</div>

	@Scripts.Render("~/bundles/jquery")
	@RenderSection("scripts", required: false)
</body>
</html>
