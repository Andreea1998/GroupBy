@Styles.Render("~/Content/Group.css")

@model Facebook.Models.Group

@{
    ViewBag.Title = "New";
}

<div class="font-robo">
    <div class="wrapper wrapper--w680">
        <div class="card card-1">
            <div class="card-body">
                <h2 class="title">Create a New Group</h2>
                @using (Html.BeginForm("New", "Group", FormMethod.Post))
                {
                    @Html.HiddenFor(m => m.creatorId);
                    @Html.LabelFor(m => m.name, "Enter a title for the group");
                    <br>
                    @Html.TextBoxFor(m => m.name, new { @class = "input--style-1" });
                    
                    <input type="submit" value="Submit" , class="btn btn-success" />
                }
            </div>
        </div>
    </div>
</div>