@model IEnumerable<Facebook.Models.Group>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


@foreach (var item in Model) {
    <tr>
        <td>
          <h3> @item.name </h3>
        </td>
        <td>
            @Html.ActionLink("Enter", "Show","Group", new { @id=item.groupID },null) 
        </td>
    </tr>
}

<div class="container mt-4">
    <div class="row text-center mt-2">
        @Html.ActionLink("New Group", "New", "Group", new { @id = ViewBag.groupsOwner }, new { @class = "btn btn-success" })
    </div>
</div>

