@model IEnumerable<Facebook.Models.Group>
@Styles.Render("~/Content/SmallCSS.css")

@{
    ViewBag.Title = "Index";
}

<h2>My Groups</h2>
<div class="container mt-4">
    @Html.ActionLink("New Group", "New", "Group", new { @id = ViewBag.groupsOwner }, new { @class = "btn btn-success" })
</div>

@foreach (var item in Model)
{
    <div class="container wrap">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6 col-md-offset-3">
                <div class="well well-sm">
                    <h3> @item.name </h3>
                    <br />
                    @Html.ActionLink("Enter", "Show", "Group", new { @id = item.groupID }, new { @class = "btn btn-success" })
                </div>
            </div>
        </div>
    </div>
}

